{% extends 'layout/base.html.twig' %}
{% block title %}All Books{% endblock %}

{% block main %}
    <main>
        <h1>All Books</h1>
        <ul>
            {% for book in books %}
                <li>
                    <a href="{{ path('app_books_show', { id: book.id }) }}">
                        Title: <b>{{ book.title }}</b>,
                        Author: <b>{{ book.author }}</b>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}
